<?xml version="1.0" encoding="UTF-8"?>
<included>
    <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener"/>

    <appender name="stdout_json_masked" class="no.nav.common.log.MaskingAppender">
        <appender-ref ref="consoleAppender"/>
    </appender>
    <appender name="consoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder"/>
    </appender>

    <!-- Prometheus metrikker for antall ganger logget per nivå -->
    <appender name="metrics" class="io.prometheus.client.logback.InstrumentedAppender"/>

    <root level="INFO">
        <appender-ref ref="stdout_json_masked"/>
        <appender-ref ref="metrics"/>
    </root>

    <!-- Logger cookies dersom den ikke parses riktig, noe vi ikke ønsker -->
    <logger name="org.apache.tomcat.util.http.parser.Cookie" level="OFF" />

    <logger name="org.apache" level="INFO"/>
    <logger name="org.apache.cxf" level="ERROR"/>
    <logger name="no.nav.common.cxf" level="ERROR"/>
    <logger name="org.apache.http.client.protocol.ResponseProcessCookies" level="ERROR"/>
    <logger name="org.apache.wss4j.common.crypto.CryptoBase" level="ERROR"/>
    <logger name="no.nav.common.rest.client.LogRequestInterceptor" level="INFO"/>
    <logger name="no.nav.common.rest.filter.LogRequestFilter" level="INFO"/>

    <appender name="team-logs" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
        <destination>team-logs.nais-system:5170</destination>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"google_cloud_project":"${GOOGLE_CLOUD_PROJECT}","nais_namespace_name":"${NAIS_NAMESPACE}","nais_pod_name":"${NAIS_POD_NAME}","nais_container_name":"${NAIS_APP_NAME}"}</customFields>
            <includeContext>false</includeContext>
        </encoder>
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator class="ch.qos.logback.classic.boolex.OnMarkerEvaluator">
                <marker>TEAM_LOGS</marker>
            </evaluator>
            <OnMatch>ACCEPT</OnMatch>
            <OnMismatch>DENY</OnMismatch>
        </filter>
    </appender>

    <appender name="default-json" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder" />
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator class="ch.qos.logback.classic.boolex.OnMarkerEvaluator">
                <marker>TEAM_LOGS</marker>
            </evaluator>
            <OnMatch>DENY</OnMatch>
            <OnMismatch>ACCEPT</OnMismatch>
        </filter>
    </appender>

    <root level="INFO">
        <appender-ref ref="default-json" />
        <appender-ref ref="team-logs" />
    </root>

    <logger name="TeamLog" level="INFO" additivity="false">
        <appender-ref ref="team-logs" />
    </logger>

</included>