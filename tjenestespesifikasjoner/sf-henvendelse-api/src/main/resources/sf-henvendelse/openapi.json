{
  "openapi": "3.0.2",
  "info": {
    "title": "Salesforce Henvendelse API",
    "version": "1.0"
  },
  "servers": [
    { "url": "https://sf-henvendelse.dev.intern.nav.no/api" },
    { "url": "https://sf-henvendelse.intern.nav.no/api" },
    { "url": "https://navdialog--uat.my.salesforce.com/services/apexrest" }
  ],
  "paths": {
    "/henvendelse/kodeverk/temagrupper": {
      "get": {
        "tags": ["Kodeverk"],
        "description": "Returnerer gyldige temagrupper for en henvendelse",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Temagruppe"
                  }
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        },
        "parameters": [
          {
            "$ref": "#/components/parameters/X-Correlation-ID"
          }
        ]
      }
    },
    "/henvendelse/sladding/aarsaker/{kjedeId}": {
      "get": {
        "tags": ["Henvendelse Behandling"],
        "description": "Returnerer gyldige sladdeårsaker for en meldingskjede",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "example": ["Ikke statlig dialog", "Sikkerhetshendelse"]
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        },
        "parameters": [
          {
            "$ref": "#/components/parameters/X-Correlation-ID"
          },
          {
            "name": "kjedeId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID til kjeden som har meldinger som skal sladdes"
          }
        ]
      }
    },
    "/henvendelse/sladding": {
      "post": {
        "tags": ["Henvendelse Behandling"],
        "description": "Registrerer den gitte meldingen for sladding med den definerte årsakskoden",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SladdeRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        },
        "parameters": [
          {
            "$ref": "#/components/parameters/X-Correlation-ID"
          }
        ]
      }
    },
    "/henvendelse/journal": {
      "post": {
        "tags": ["Henvendelse Behandling"],
        "description": "Endepunkt for igangsettelse av journalføring mot JOARK. Referanse til fagsak i overenstemmelse med påkrevd input til [Dokarkiv API](https://dokarkiv-q2.nais.preprod.local/swagger-ui.html#/arkiver-og-journalfoer-rest-controller/opprettJournalpostUsingPOST). Ved blank/null som saksId (og fagsaksystem) vil journalposten opprettes som generell sak på tema.",
        "requestBody": {
          "required": true,
          "description": "JSON request med metadata for journalpost",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/JournalRequest"
              }
            }
          }
        },
        "parameters": [
          {
            "$ref": "#/components/parameters/X-Correlation-ID"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "$ref": "#/components/schemas/Henvendelse"
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "403": {
            "$ref": "#/components/responses/Forbidden"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/henvendelse/behandling/{kjedeId}": {
      "put": {
        "tags": ["Henvendelse Behandling"],
        "description": "Behandling/oppdatering av eksisterende henvendelser. Benyttes til f.eks å oppdatere felter som kasseringsdato, gjeldendeTema. Request body er JSON som følger objektmodellen til henvendelse, men krever kun at du sender med felter hvor dataene skal oppdateres.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Henvendelse"
              }
            }
          }
        },
        "parameters": [
          {
            "name": "kjedeId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Unik id til samtalereferat eller tråd som man ønsker å behandle"
          },
          {
            "$ref": "#/components/parameters/X-Correlation-ID"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "$ref": "#/components/schemas/Henvendelse"
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "403": {
            "$ref": "#/components/responses/Forbidden"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/henvendelse/meldingskjede/lukk": {
      "post": {
        "tags": ["Henvendelse Behandling"],
        "description": "Endepunkt som benyttes for lukking av en meldingskjede. Når kjeden er lukket er det ikke lenger mulig å skrive flere meldinger.",
        "parameters": [
          {
            "name": "kjedeId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Unik kjedeId til meldingstråden som skal lukkes"
          },
          {
            "$ref": "#/components/parameters/X-Correlation-ID"
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/henvendelse/ny/samtalereferat": {
      "post": {
        "tags": ["Ny Henvendelse"],
        "description": "Opprett nytt samtalereferat tilknyttet en aktør",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SamtalereferatRequest"
              }
            }
          }
        },
        "parameters": [
          {
            "$ref": "#/components/parameters/X-Correlation-ID"
          },
          {
            "name": "kjedeId",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "Kjedeid hvis referatet skal knyttes som et oppfølingsreferat."
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Henvendelse"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "403": {
            "$ref": "#/components/responses/Forbidden"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/henvendelse/ny/melding": {
      "post": {
        "tags": ["Ny Henvendelse"],
        "description": "Opprett ny melding relatert til en aktør",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MeldingRequest"
              }
            }
          }
        },
        "parameters": [
          {
            "$ref": "#/components/parameters/X-Correlation-ID"
          },
          {
            "name": "kjedeId",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "Kjedeid hvis ny melding skal opprettes på en eksisterende tråd. Hvis denne er blank opprettes meldingen på en ny tråd."
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Henvendelse"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "403": {
            "$ref": "#/components/responses/NoNewMessageOnClosedThread"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/henvendelseinfo/henvendelseliste": {
      "get": {
        "tags": ["Henvendelse Info"],
        "description": "Returnerer en liste med henvendelser for en gitt aktør",
        "parameters": [
          {
            "name": "aktorid",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Aktørid til person for uthentelse av henvendelseliste"
          },
          {
            "$ref": "#/components/parameters/X-Correlation-ID"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Henvendelse"
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/henvendelseinfo/henvendelse/{kjedeId}": {
      "get": {
        "tags": ["Henvendelse Info"],
        "description": "Returnerer informasjon for en gitt henvendelse",
        "parameters": [
          {
            "name": "kjedeId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Unik ID til henvendelsen"
          },
          {
            "$ref": "#/components/parameters/X-Correlation-ID"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Henvendelse"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    }
  },
  "security": [{ "Salesforce_auth": [] }],
  "components": {
    "schemas": {
      "Markering": {
        "type": "object",
        "properties": {
          "markeringstype": {
            "type": "string",
            "enum": ["FEILSENDT", "KONTORSPERRE"],
            "example": "KONTORSPERRE"
          },
          "markertDato": {
            "type": "string",
            "format": "date-time",
            "example": "2021-06-27T12:00:00.000Z"
          },
          "markertAv": {
            "type": "string",
            "description": "NAV ident til veileder/saksbehandler som har markert henvendelsen",
            "example": "Z999999"
          },
          "kontorsperreEnhet": {
            "type": "string",
            "description": "Enheten henvendelsen er kontorsperret til. Kun definert hvis markeringstype = KONTORSPERRE",
            "example": "3410"
          },
          "kontorsperreGT": {
            "type": "string",
            "description": "GT henvendelsen er kontorsperret til. Kun definert hvis markeringstype = KONTORSPERRE",
            "example": "3410"
          }
        },
        "required": ["markeringstype", "markertDato", "markertAv"]
      },
      "MeldingRequest": {
        "type": "object",
        "properties": {
          "aktorId": {
            "type": "string",
            "example": "2786793959304"
          },
          "temagruppe": {
            "type": "string",
            "example": "ARBD"
          },
          "tema": {
            "type": "string",
            "description": "Temakode for journalpost som skal opprettes",
            "example": "DAG"
          },
          "enhet": {
            "type": "string",
            "example": "4100"
          },
          "fritekst": {
            "type": "string",
            "example": "Dette er en melding"
          },
          "tildelMeg": {
            "type": "boolean",
            "example": true,
            "description": "Sett til true hvis konsument ønsker at svar i tråden skal opprette oppgave tildelt direkte til seg. Dette er på trådnivå og vil effektivt kun gjelde for siste melding i tråden med dette flagget satt."
          }
        },
        "required": ["aktorId", "temagruppe", "enhet", "fritekst"]
      },
      "SamtalereferatRequest": {
        "type": "object",
        "properties": {
          "aktorId": {
            "type": "string",
            "example": "2786793959304"
          },
          "temagruppe": {
            "type": "string",
            "example": "ARBD"
          },
          "tema": {
            "type": "string",
            "description": "Temakode for journalpost som skal opprettes",
            "example": "DAG"
          },
          "enhet": {
            "type": "string",
            "example": "4100"
          },
          "fritekst": {
            "type": "string",
            "example": "Dette er en melding"
          },
          "kanal": {
            "type": "string",
            "enum": ["TELEFON", "OPPMOTE"],
            "description": "Definerer om referatet er skrevet etter en telefonsamtale eller et fysisk oppmote hos NAV",
            "example": "TELEFON"
          }
        },
        "required": ["aktorId", "temagruppe", "enhet", "fritekst", "kanal"]
      },
      "JournalRequest": {
        "type": "object",
        "properties": {
          "journalforendeEnhet": {
            "type": "string",
            "description": "NAV-enhet til veilder/saksbehandler som opprettet journalposten",
            "example": "4100"
          },
          "fagsakId": {
            "type": "string",
            "description": "Referanse til fagsak i overenstemmelse med påkrevd input til [Dokarkiv API](https://dokarkiv-q2.nais.preprod.local/swagger-ui.html#/arkiver-og-journalfoer-rest-controller/opprettJournalpostUsingPOST). Ved blank/null som saksId vil journalposten opprettes som generell sak på tema.",
            "example": "005602185"
          },
          "fagsaksystem": {
            "type": "string",
            "enum": [
              "FS38",
              "FS36",
              "UFM",
              "AO01",
              "AO11",
              "IT01",
              "OEBS",
              "PP01",
              "K9",
              "BISYS",
              "BA",
              "EF",
              "KONT",
              "SUPSTONAD",
              "OMSORGSPENGER",
              "HJELPEMIDLER"
            ],
            "description": "Fagsystemet som saken behandles i, required hvis saksId er definert",
            "example": "AO01"
          },
          "temakode": {
            "type": "string",
            "description": "Temakode for journalpost som skal opprettes",
            "example": "DAG"
          },
          "kjedeId": {
            "type": "string",
            "description": "Unik ID til henvendelsen som skal journalføres",
            "example": "a0J3N000004dUBJUA2"
          }
        },
        "required": ["journalforendeEnhet", "temakode", "kjedeId"]
      },
      "Journalpost": {
        "type": "object",
        "properties": {
          "journalforerNavIdent": {
            "type": "string",
            "description": "NAV-ident til veileder/saksbehandler som opprettet journalposten",
            "example": "Z999999"
          },
          "journalforendeEnhet": {
            "type": "string",
            "description": "NAV-enhet til veileder/saksbehandler som opprettet journalposten",
            "example": "4100"
          },
          "journalfortDato": {
            "type": "string",
            "description": "Dato for opprettelse av journalpost",
            "format": "date-time",
            "example": "2021-06-27T12:00:00.000Z"
          },
          "journalfortTema": {
            "type": "string",
            "description": "Tema for opprettet journalpost",
            "example": "DAG"
          },
          "fagsakId": {
            "type": "string",
            "description": "Referanse til fagsak",
            "example": "005602185"
          },
          "fagsaksystem": {
            "type": "string",
            "enum": [
              "FS38",
              "FS36",
              "UFM",
              "AO01",
              "AO11",
              "IT01",
              "OEBS",
              "PP01",
              "K9",
              "BISYS",
              "BA",
              "EF",
              "KONT",
              "SUPSTONAD",
              "OMSORGSPENGER",
              "HJELPEMIDLER"
            ],
            "description": "Fagsystemet som saken behandles i.",
            "example": "AO01"
          },
          "journalpostId": {
            "type": "string",
            "description": "Unik referanse til journalpost i JOARK",
            "example": "509934220"
          }
        },
        "required": ["journalforerNavIdent", "journalfortDato", "journalfortTema"]
      },
      "MeldingFra": {
        "type": "object",
        "properties": {
          "identType": {
            "type": "string",
            "enum": ["NAVIDENT", "AKTORID", "SYSTEM"],
            "description": "Type ident for relatert avsender, avsendertype SYSTEM har hverken ident eller navEnhet",
            "example": "NAVIDENT"
          },
          "ident": {
            "type": "string",
            "description": "Avsenders ident (AKTORID/NAVIDENT)",
            "example": "Z999999"
          },
          "navEnhet": {
            "type": "string",
            "description": "NAV enhet til avsender hvis identType = NAVIDENT",
            "example": "4100"
          }
        },
        "required": ["identType"]
      },
      "Melding": {
        "type": "object",
        "properties": {
          "fritekst": {
            "type": "string",
            "description": "Meldingen som ble skrevet"
          },
          "sendtDato": {
            "type": "string",
            "description": "Datetime string",
            "format": "date-time",
            "example": "2021-06-27T12:00:00.000Z"
          },
          "lestDato": {
            "type": "string",
            "description": "Datetime string",
            "format": "date-time",
            "example": "2021-06-27T12:00:00.000Z"
          },
          "kanal": {
            "type": "string",
            "description": "Meldingskanalen",
            "enum": ["TELEFON", "OPPMOTE", "DIGITAL"],
            "example": "DIGITAL"
          },
          "meldingsId": {
            "type": "string",
            "description": "Unik id for meldingen i kjeden",
            "example": "a0J3N000004dUBJUA2"
          },
          "fra": {
            "$ref": "#/components/schemas/MeldingFra"
          }
        },
        "required": ["sendtDato", "fra", "meldingsId"]
      },
      "Henvendelse": {
        "type": "object",
        "properties": {
          "henvendelseType": {
            "type": "string",
            "enum": ["SAMTALEREFERAT", "MELDINGSKJEDE", "CHAT"]
          },
          "fnr": {
            "type": "string",
            "example": "12345678910"
          },
          "aktorId": {
            "type": "string",
            "example": "2786793959304"
          },
          "opprinneligGT": {
            "type": "string",
            "example": "2786793959304"
          },
          "opprettetDato": {
            "type": "string",
            "description": "Datetime string",
            "format": "date-time",
            "example": "2021-06-27T12:00:00.000Z"
          },
          "avsluttetDato": {
            "type": "string",
            "description": "Datetime string",
            "format": "date-time",
            "example": "2021-06-28T12:00:00.000Z"
          },
          "kasseringsDato": {
            "type": "string",
            "description": "Datetime string",
            "format": "date-time",
            "example": "2021-06-27T12:00:00.000Z"
          },
          "kontorsperre": {
            "type": "boolean",
            "description": "Definerer om henvendelsen er markert som kontorsperret. Markeringsinformasjon finnes i listen av markeringer",
            "example": false
          },
          "sladding": {
            "type": "boolean",
            "description": "Definerer om henvendelsen skal vurderes for sladding. Dette sender henvendelsen til en sladdekø",
            "example": false
          },
          "feilsendt": {
            "type": "boolean",
            "description": "Definerer om henvendelsen er markert som feilsendt. Markeringsinformasjon finnes i listen av markeringer",
            "example": true
          },
          "kjedeId": {
            "type": "string",
            "description": "Unik if for henvendelsen"
          },
          "gjeldendeTemagruppe": {
            "type": "string",
            "example": "ARBD"
          },
          "gjeldendeTema": {
            "type": "string",
            "example": "DAG"
          },
          "journalposter": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Journalpost"
            }
          },
          "meldinger": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Melding"
            }
          },
          "markeringer": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Markering"
            }
          }
        },
        "required": [
          "henvendelseType",
          "aktorId",
          "fnr",
          "opprettetDato",
          "kontorsperre",
          "feilsendt",
          "kjedeId",
          "gjeldendeTemagruppe"
        ]
      },
      "Temagruppe": {
        "type": "object",
        "properties": {
          "navn": {
            "type": "string",
            "example": "Familie"
          },
          "kode": {
            "type": "string",
            "example": "FMLI"
          }
        },
        "required": ["navn", "kode"]
      },
      "SladdeRequest": {
        "type": "object",
        "properties": {
          "aarsak": {
            "type": "string",
            "example": "Sikkerhetshendelse"
          },
          "kjedeId": {
            "type": "string",
            "example": "a0J3N000004dUBJUA2"
          }
        },
        "required": ["aarsak", "kjedeId"]
      },
      "Error": {
        "type": "object",
        "properties": {
          "statusCode": {
            "type": "integer"
          },
          "message": {
            "type": "string"
          }
        },
        "required": ["statusCode", "message"]
      }
    },
    "responses": {
      "NotFound": {
        "description": "NOT FOUND",
        "content": {
          "application/json": {
            "schema": {
