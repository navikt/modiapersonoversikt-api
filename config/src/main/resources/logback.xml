<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds">
    <property name="MAIN_APPLICATION" value="modiabrukerdialog"/>

    <appender name="exceptionlog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${APP_LOG_HOME}/${MAIN_APPLICATION}-error.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${APP_LOG_HOME}/${MAIN_APPLICATION}-error-%d{yyyy-MM-dd}.gz</FileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <encoder>
            <pattern>%date %level [%thread] - [%file:%line], %X{callId} - %m%n</pattern>
        </encoder>
    </appender>
    <appender name="securitylog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${APP_LOG_HOME}/${MAIN_APPLICATION}-security.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${APP_LOG_HOME}/${MAIN_APPLICATION}-security-%d{yyyy-MM-dd}.gz</FileNamePattern>
            <maxHistory>90</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%date %level [%thread] - [%file:%line], %X{callId} - %m%n</pattern>
        </encoder>
    </appender>

    <appender name="infolog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${APP_LOG_HOME}/${MAIN_APPLICATION}-info.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${APP_LOG_HOME}/${MAIN_APPLICATION}-info-%d{yyyy-MM-dd}.%i.gz</FileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>400MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%date %level [%thread] - [%file:%line], %X{callId} - %m%n</pattern>
        </encoder>
    </appender>

    <!-- The sporingslogg-Appender- Logs access to sensitive information -->
    <appender name="sporinglog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${APP_LOG_HOME}/${MAIN_APPLICATION}-sporing.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${APP_LOG_HOME}/${MAIN_APPLICATION}-sporing-%d{yyyy-MM-dd}.gz</fileNamePattern>
            <maxHistory>95</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d [%-5level] [%thread] %logger{5} - [%X{consumerId}, %X{callId}, %X{userId}] - %m%n</pattern>
        </encoder>
    </appender>

    <appender name="personaccessappender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${APP_LOG_HOME}/${MAIN_APPLICATION}-personaccess.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${APP_LOG_HOME}/${MAIN_APPLICATION}-personaccess-%d{yyyy-MM-dd}.gz</fileNamePattern>
            <maxHistory>95</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%date %level [%thread] - [%file:%line] - %m%n</pattern>
        </encoder>
    </appender>
    <appender name="metricslog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${APP_LOG_HOME}/${MAIN_APPLICATION}-metrics.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${APP_LOG_HOME}/${MAIN_APPLICATION}-metrics-%d{yyyy-MM-dd}.gz</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%date %level [%thread] - [%file:%line], %X{callId} - %m%n</pattern>
        </encoder>
    </appender>

    <!--tjeneste kall Appender-->
    <appender name="ServiceCallsFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${SERVICE_CALLS_HOME}/tjenestekall.log</file>
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${SERVICE_CALLS_HOME}/tjenestekall.log.%d{yyyy-MM-dd_HH}.gz</fileNamePattern>
            <maxHistory>72</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%date{ISO8601} ${applicationName} %level %mdc %m%n%rEx</pattern>
        </encoder>
    </appender>

    <appender name="SYSLOG" class="com.spotify.logging.logback.MillisecondPrecisionSyslogAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>${syslog.filter.level:-INFO}</level>
        </filter>
        <syslogHost>localhost</syslogHost>
        <facility>LOCAL1</facility>
        <suffixPattern>${MAIN_APPLICATION} %mdc %logger{30} %m %n%rEx</suffixPattern>
        <throwableExcluded>true</throwableExcluded>
    </appender>

    <logger name="no.nav.modig.common.SporingsLogger" level="INFO">
        <appender-ref ref="sporinglog"/>
    </logger>

    <logger name="no.nav.sbl.dialogarena.sporsmalogsvar.consumer.henvendelse.HenvendelseBehandlingService" level="INFO">
        <appender-ref ref="infolog"/>
    </logger>

    <logger name="personaccess" level="warn" additivity="false">
        <appender-ref ref="personaccessappender"/>
    </logger>

    <logger name="no.nav.sbl.dialogarena.common.cxf" level="${modiabrukerdialog.cxf.log.level:-INFO}" additivity="false">
        <appender-ref ref="ServiceCallsFile"/>
    </logger>

    <logger name="no.nav.modig.content.ValuesFromContentWithResourceBundleFallback" level="ERROR"/>

    <logger name="org.apache.cxf" level="${modiabrukerdialog.apache.cxf.log.level:-OFF}" additivity="false">
        <appender-ref ref="ServiceCallsFile"/>
    </logger>

    <root level="${ROOT_LOG_LEVEL:-ERROR}">
        <appender-ref ref="exceptionlog"/>
        <appender-ref ref="infolog"/>
        <appender-ref ref="SYSLOG"/>
    </root>

</configuration>