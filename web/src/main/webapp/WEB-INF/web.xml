<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

<display-name>modiabrukerdialog</display-name>
    <session-config>
        <!-- Oppdatering av denne verdien mÃ¥ korrespondere med verdien i JS-koden som viser timeoutboksen, per 2015-11-30 i sessionTimeout.js. -->
        <session-timeout>60</session-timeout>
        <cookie-config>
            <http-only>true</http-only>
            <secure>true</secure>
        </cookie-config>
    </session-config>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <context-param>
        <param-name>oidc.statelessApplication</param-name>
        <param-value>false</param-value>
    </context-param>
    <context-param>
        <param-name>contextClass</param-name>
        <param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
    </context-param>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>no.nav.sbl.dialogarena.modiabrukerdialog.web.config.ModiaApplicationContext</param-value>
    </context-param>
    <context-param>
        <param-name>configuration</param-name>
        <param-value>deployment</param-value>
    </context-param>

    <!-- exposes the request to current thread -->
    <listener>
        <listener-class>org.springframework.web.context.request.RequestContextListener</listener-class>
    </listener>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Public</web-resource-name>
            <url-pattern>/img/*</url-pattern>
            <url-pattern>/css/*</url-pattern>
            <url-pattern>/js/*</url-pattern>
            <url-pattern>/wicket/resource/*</url-pattern>
            <url-pattern>/internal/selftest</url-pattern>
            <url-pattern>/internal/selftest.json</url-pattern>
            <url-pattern>/internal/isAlive</url-pattern>
            <url-pattern>/internal/metrics/*</url-pattern>
            <url-pattern>/rest/login</url-pattern>
        </web-resource-collection>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Restricted</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <!-- From Servlet spec 3.1 "**" means any authenticated user
            ref: https://community.oracle.com/blogs/swchan2/2013/04/19/role-servlet-31-security-constraint -->
            <role-name>**</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-role>
        <role-name>0000-GA-BD06_EndreKontaktAdresse</role-name>
    </security-role>
    <security-role>
        <role-name>0000-GA-BD06_ModiaGenerellTilgang</role-name>
    </security-role>
    <security-role>
        <role-name>0000-GA-BD06_EndreKontonummer</role-name>
    </security-role>

    <servlet>
        <servlet-name>rest</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>no.nav.sbl.dialogarena.modiabrukerdialog.web.rest.RestConfig</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
        <async-supported>true</async-supported>
    </servlet>
    <servlet-mapping>
        <servlet-name>rest</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>CORSFilter</filter-name>
        <filter-class>no.nav.sbl.dialogarena.modiabrukerdialog.web.rest.CORSFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CORSFilter</filter-name>
        <url-pattern>/rest/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>staticResourcesCacheFilter</filter-name>
        <filter-class>no.nav.modig.frontend.filter.StaticResourcesCacheFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>staticResourcesCacheFilter</filter-name>
        <url-pattern>/img/*</url-pattern>
        <url-pattern>/font/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>MDCFilter</filter-name>
        <filter-class>no.nav.modig.modia.logging.MDCFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>MDCFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>RedirectFilter</filter-name>
        <filter-class>no.nav.sbl.dialogarena.modiabrukerdialog.web.RedirectFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RedirectFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>wicket</filter-name>
        <filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
        <init-param>
            <param-name>applicationFactoryClassName</param-name>
            <param-value>org.apache.wicket.spring.SpringWebApplicationFactory</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>wicket</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>

    <error-page>
        <error-code>401</error-code>
        <location>/feilsider/401.html</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/feilsider/403.html</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/feilsider/404.html</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/feilsider/500.html</location>
    </error-page>
</web-app>