<?xml version="1.0" encoding="UTF-8"?>
<Policy xmlns="urn:oasis:names:tc:xacml:2.0:policy:schema:os"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="urn:oasis:names:tc:xacml:2.0:policy:schema:os http://docs.oasis-open.org/xacml/access_control-xacml-2.0-policy-schema-os.xsd"
        PolicyId="urn:xacml:2.0:nav.modia:policysetid:kontorsperre"
        RuleCombiningAlgId="urn:oasis:names:tc:xacml:1.0:rule-combining-algorithm:first-applicable">
    <Description>Regler for visning av kontorsperret traader</Description>

    <Target>
        <Actions>
            <Action>
                <ActionMatch MatchId="urn:oasis:names:tc:xacml:1.0:function:string-equal">
                    <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">kontorsperre</AttributeValue>
                    <ActionAttributeDesignator
                            DataType="http://www.w3.org/2001/XMLSchema#string"
                            AttributeId="urn:oasis:names:tc:xacml:1.0:action:action-id"/>
                </ActionMatch>
            </Action>
        </Actions>
    </Target>
    <Rule RuleId="ansvarlig-enhet-ikke-satt" Effect="Permit">
        <Description>Gi tilgang hvis ansvarlig.enhet ikke er satt (Melding ikke kontorsperret).</Description>
        <Condition>
            <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:integer-equal">
                <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#integer">0</AttributeValue>
                <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-bag-size">
                    <ResourceAttributeDesignator DataType="http://www.w3.org/2001/XMLSchema#string"
                                                 AttributeId="urn:nav:ikt:tilgangskontroll:xacml:resource:ansvarlig-enhet"/>
                </Apply>
            </Apply>
        </Condition>
    </Rule>
    <Rule RuleId="ident-har-samme-lokal-enhet" Effect="Permit">
        <Description>Gi tilgang hvis saksbehandler.lokaleenhet lik bruker.enhet</Description>
        <Condition>
            <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-is-in">
                <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-one-and-only">
                    <ResourceAttributeDesignator DataType="http://www.w3.org/2001/XMLSchema#string"
                                                 AttributeId="urn:nav:ikt:tilgangskontroll:xacml:resource:ansvarlig-enhet"/>
                </Apply>
                <SubjectAttributeDesignator DataType="http://www.w3.org/2001/XMLSchema#string"
                                            AttributeId="urn:nav:ikt:tilgangskontroll:xacml:subject:localenhet"/>
            </Apply>
        </Condition>
    </Rule>

    <Rule RuleId="ingen-andre-har-tilgang" Effect="Deny"/>
</Policy>