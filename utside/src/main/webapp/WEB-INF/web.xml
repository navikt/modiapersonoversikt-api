<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <display-name>sporsmalogsvar</display-name>

    <!-- sikrer at man kan benytte servlet-loginmodules -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>All pages</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
    </security-constraint>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <context-param>
        <param-name>contextClass</param-name>
        <param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
    </context-param>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>no.nav.sbl.dialogarena.sporsmalogsvar.config.ApplicationContext</param-value>
    </context-param>

    <!-- sessioncreator MÅ ligge først i filter-rekken slik at man unngår url-rewriting på jboss -->
    <filter>
        <filter-name>sessioncreator</filter-name>
        <filter-class>no.nav.modig.filters.SessionCreatorFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>sessioncreator</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <!--<filter>-->
        <!--<filter-name>HttpSessionSecurityIntegrationFilter</filter-name>-->
        <!--<filter-class>no.nav.sbl.dialogarena.minehenvendelser.SecurityFilterMock</filter-class>-->
    <!--</filter>-->

    <filter>
        <filter-name>HttpSessionSecurityIntegrationFilter</filter-name>
        <filter-class>no.nav.modig.security.filter.OpenAMLoginFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>HttpSessionSecurityIntegrationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>xframeoptions</filter-name>
        <filter-class>no.nav.sbl.dialogarena.common.web.security.XFrameOptionsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>xframeoptions</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>MDCFilter</filter-name>
        <filter-class>no.nav.modig.presentation.logging.session.MDCFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>MDCFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>wicket</filter-name>
        <filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
        <init-param>
            <param-name>applicationFactoryClassName</param-name>
            <param-value>org.apache.wicket.spring.SpringWebApplicationFactory</param-value>
        </init-param>
        <init-param>
            <param-name>configuration</param-name>
            <param-value>deployment</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>wicket</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>

</web-app>
