<?xml version="1.0" encoding="UTF-8"?>
<Policy xmlns="urn:oasis:names:tc:xacml:2.0:policy:schema:os"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="urn:oasis:names:tc:xacml:2.0:policy:schema:os http://docs.oasis-open.org/xacml/access_control-xacml-2.0-policy-schema-os.xsd"
		PolicyId="urn:xacml:2.0:nav.modia:policysetid:pesys-tilgang"
		RuleCombiningAlgId="urn:oasis:names:tc:xacml:1.0:rule-combining-algorithm:first-applicable">
	<Description>Regler for tilgang til Pesys.</Description>

	<Target>
		<Actions>
			<Action>
				<ActionMatch MatchId="urn:oasis:names:tc:xacml:1.0:function:string-equal">
					<AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">pensaksbeh</AttributeValue>
					<ActionAttributeDesignator AttributeId="urn:oasis:names:tc:xacml:1.0:action:action-id" DataType="http://www.w3.org/2001/XMLSchema#string" />
				</ActionMatch>
			</Action>
		</Actions>
	</Target>

	<Rule RuleId="ident-har-pesys-tilgang" Effect="Permit">
		<Description>Vis pesys-lenke for bruker med saksbehandlertilgang i Pesys.</Description>
		<Condition>
			<Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-is-in">
				<AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">0000-GA-PENSJON_SAKSBEHANDLER</AttributeValue>
				<SubjectAttributeDesignator DataType="http://www.w3.org/2001/XMLSchema#string"
											AttributeId="urn:oasis:names:tc:xacml:2.0:subject:role"/>
			</Apply>
		</Condition>
	</Rule>

	<Rule RuleId="ingen-andre-har-tilgang" Effect="Deny"/>
</Policy>